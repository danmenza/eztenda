<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for @bidding do |f| %>
        <%= f.input :price, as: :integer %>
        <%= f.input :incentive, as: :text %>
        <%= f.hidden_field :confirmation, default: :false%>
        <%= f.submit "Update bid", class: "btn btn-primary" %>
        <%= link_to "Delete bid", bidding_path(@bidding), method: :delete, data: {Confirm: "delete bidding?"}, class: "btn btn-outline-danger" %>
      <% end %>
    </div>
  </div>
</div>
