<div class="container">
  <div class="col-sm-7 offset-sm-2">
    <div class="newerclass">
      <div class="container2 bg-white p-5">
        <h3 class="text-center" style="padding-top: 30px;">+ Create new listing</h3>
        <%= simple_form_for(@listing) do |f| %>
        <%= f.input :name %>
        <%= f.input :drink_category %>
        <%= f.input :quantity %>
        <%= f.input :description %>
        <%= f.input :min_price %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.input :wholesaler %>
        <%= f.input :photo, as: :file %>
        <%= f.input :marketing %>
        <%= f.submit "Update listing", class: "btn btn-primary" %>
        <%= link_to "Delete listing", listing_path(@listing), method: :delete, data: {Confirm: "delete listing?"}, class: "btn btn-outline-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
